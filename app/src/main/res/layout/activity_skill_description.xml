<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ohio.hack.hackohio2016.SkillDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save"
            app:layout_anchor="@+id/include"
            app:layout_anchorGravity="bottom|right"
            android:layout_gravity="top|left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick="sendMessage"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Description"
            android:ems="10"
            android:id="@+id/editText4"
            android:layout_above="@+id/Description"
            android:layout_alignStart="@+id/Description"
            android:layout_marginBottom="28dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Description"
            tools:text="Describe your skill here."
            android:layout_above="@+id/save"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="81dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/enter_skill"
            tools:text="Enter skill here"
            android:layout_marginEnd="39dp"
            android:layout_marginTop="58dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/save" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Skill:"
            android:ems="10"
            android:id="@+id/editText7"
            android:layout_alignBaseline="@+id/enter_skill"
            android:layout_alignBottom="@+id/enter_skill"
            android:layout_alignStart="@+id/editText4" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
