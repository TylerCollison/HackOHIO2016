<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ohio.hack.hackohio2016.InputInterest">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="Please Input Interests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="30sp" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:ems="30"
            android:layout_marginTop="20dp"
            android:id="@+id/intText1"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="25dp"
            tools:text="interest"
            android:layout_toStartOf="@+id/intSaveButton" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/intText2"

            android:layout_below="@+id/intText1"

            android:inputType="textCapWords"
            tools:text="interest"
            android:layout_alignStart="@+id/intText1"
            android:layout_alignEnd="@+id/intText1"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/intText3"
            android:layout_below="@+id/intText2"
            android:layout_alignStart="@+id/intText1"
            tools:text="interest"
            android:layout_alignEnd="@+id/intText1" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/intText4"
            tools:text="interest"
            android:layout_below="@+id/intText3"
            android:layout_alignStart="@+id/intText1"
            android:layout_alignEnd="@+id/intText1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/intText5"
            android:layout_below="@+id/intText4"
            android:layout_alignStart="@+id/intText1"
            tools:text="interest"
            android:layout_alignEnd="@+id/intText1" />


        <Button
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/intSaveButton"
            app:layout_anchorGravity="center_vertical|center_horizontal"
            android:layout_gravity="bottom|right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick=""/>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
